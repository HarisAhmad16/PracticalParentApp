<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.cmpt276.titanium">

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Titanium">
        <activity
            android:name=".ui.EditChildActivity"
            android:exported="true" />
        <activity
            android:name=".ui.RemoveChildActivity"
            android:exported="true" />
        <activity
            android:name=".ui.AddChildActivity"
            android:exported="true" />
        <activity
            android:name=".ui.CoinActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:exported="true"
            android:parentActivityName=".ui.MenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.TimerActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:exported="true"
            android:label="@string/timerTitle"
            android:parentActivityName=".ui.MenuActivity"
            android:theme="@style/Theme.Titanium.Calm"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.MenuActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>