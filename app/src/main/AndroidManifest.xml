<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.cmpt276.titanium">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher_custom"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_custom_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Titanium">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <receiver android:name=".ui.TimerBroadcastReceiver" />

        <service android:name=".ui.TimerService" />

        <activity
            android:name=".ui.ChangeChildActivity"
            android:exported="false" />
        <activity
            android:name=".ui.CoinFlipQueueActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:exported="true"
            android:parentActivityName=".ui.CoinFlipActivity" />
        <activity
            android:name=".ui.TasksActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:exported="true"
            android:parentActivityName=".ui.MenuActivity" />
        <activity
            android:name=".ui.CoinFlipHistoryActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:exported="true"
            android:parentActivityName=".ui.CoinFlipActivity" />
        <activity
            android:name=".ui.ChildViewActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:exported="true"
            android:parentActivityName=".ui.MenuActivity"
            android:theme="@style/Theme.Titanium.Child" />
        <activity
            android:name=".ui.ChildAddActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:exported="true"
            android:parentActivityName=".ui.MenuActivity"
            android:theme="@style/Theme.Titanium.Child" />
        <activity
            android:name=".ui.ChildEditActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:exported="true"
            android:parentActivityName=".ui.ChildViewActivity"
            android:theme="@style/Theme.Titanium.Child" />
        <activity
            android:name=".ui.CoinFlipActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:exported="true"
            android:parentActivityName=".ui.MenuActivity" />
        <activity
            android:name=".ui.TimerActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:exported="true"
            android:parentActivityName=".ui.MenuActivity"
            android:theme="@style/Theme.Titanium.Calm" />
        <activity
            android:name=".ui.MenuActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>