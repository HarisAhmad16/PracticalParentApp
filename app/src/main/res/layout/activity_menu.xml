<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MenuActivity">

    <TextView
        android:id="@+id/menuHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/menuHeader"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="?attr/colorPrimary"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/menuGoToAddChild"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.366"
        tools:ignore="TextContrastCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menuGoToFlipCoin"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="90dp"
        android:layout_height="125dp"
        android:background="@drawable/rounded_button_style"
        android:backgroundTint="?attr/colorPrimary"
        android:backgroundTintMode="src_in"
        android:text="@string/menuFlipCoinBtn"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="12sp"
        app:icon="@drawable/coin_icon"
        app:iconGravity="textTop"
        app:iconPadding="15dp"
        app:iconSize="60dp"
        app:iconTint="?attr/colorOnPrimary"
        app:iconTintMode="src_in"
        app:layout_constraintBottom_toTopOf="@+id/childrenList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/menuGoToAddChild"
        app:layout_constraintTop_toBottomOf="@+id/menuHeaderText"
        tools:ignore="TextContrastCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menuGoToAddChild"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="90dp"
        android:layout_height="125dp"
        android:background="@drawable/rounded_button_style"
        android:backgroundTint="?attr/colorPrimary"
        android:backgroundTintMode="src_in"
        android:text="@string/add_child_button_text"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="12sp"
        app:icon="@drawable/ic_baseline_person_add_24"
        app:iconGravity="textTop"
        app:iconPadding="15dp"
        app:iconSize="60dp"
        app:iconTint="?attr/colorOnPrimary"
        app:iconTintMode="src_in"
        app:layout_constraintBottom_toTopOf="@+id/childrenList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuHeaderText"
        tools:ignore="TextContrastCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menuGoToTimer"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="90dp"
        android:layout_height="125dp"
        android:background="@drawable/rounded_button_style"
        android:backgroundTint="?attr/colorPrimary"
        android:backgroundTintMode="src_in"
        android:fontFamily="sans-serif-medium"
        android:text="@string/menuTimerBtn"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="11sp"
        app:icon="@drawable/ic_outline_timer_24"
        app:iconGravity="textTop"
        app:iconPadding="15dp"
        app:iconSize="60dp"
        app:iconTint="?attr/colorOnPrimary"
        app:iconTintMode="src_in"
        app:layout_constraintBottom_toTopOf="@+id/childrenList"
        app:layout_constraintEnd_toStartOf="@+id/menuGoToAddChild"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuHeaderText"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/menuTextChildrenList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menuChildrenText"
        android:textColor="?attr/colorPrimary"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/childrenList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/childrenList" />

    <ListView
        android:id="@+id/childrenList"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>