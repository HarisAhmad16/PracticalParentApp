<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MenuActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="174dp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/childrenList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="vertical"
        android:scrollbarFadeDuration="5">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:columnCount="4"
                android:useDefaultMargins="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menuGoToTimer"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:background="@drawable/style_rounded_button_20"
                    android:backgroundTint="?attr/colorPrimary"
                    android:backgroundTintMode="src_in"
                    android:text="@string/menuTimerBtn"
                    android:textColor="?attr/colorOnSecondary"
                    app:icon="@drawable/ic_outline_timer_white_24"
                    app:iconGravity="textTop"
                    app:iconPadding="15dp"
                    app:iconSize="60dp"
                    app:iconTint="?attr/colorOnSecondary"
                    app:iconTintMode="src_in"
                    tools:ignore="TextContrastCheck" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menuGoToFlipCoin"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:background="@drawable/style_rounded_button_20"
                    android:backgroundTint="?attr/colorPrimary"
                    android:backgroundTintMode="src_in"
                    android:text="@string/menuFlipCoinBtn"
                    android:textColor="?attr/colorOnSecondary"
                    app:icon="@drawable/ic_coin_button_white_24"
                    app:iconGravity="textTop"
                    app:iconPadding="15dp"
                    app:iconSize="60dp"
                    app:iconTint="?attr/colorOnSecondary"
                    app:iconTintMode="src_in"
                    tools:ignore="TextContrastCheck" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menuGoToAddChild"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:background="@drawable/style_rounded_button_20"
                    android:backgroundTint="?attr/colorPrimary"
                    android:backgroundTintMode="src_in"
                    android:text="@string/add_child_button_text"
                    android:textColor="?attr/colorOnSecondary"
                    app:icon="@drawable/ic_baseline_person_add_white_24"
                    app:iconGravity="textTop"
                    app:iconPadding="15dp"
                    app:iconSize="60dp"
                    app:iconTint="?attr/colorOnSecondary"
                    app:iconTintMode="src_in"
                    tools:ignore="TextContrastCheck" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menuWhoseTurn"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:background="@drawable/style_rounded_button_20"
                    android:backgroundTint="?attr/colorPrimary"
                    android:backgroundTintMode="src_in"
                    android:text="@string/whoseTurn"
                    android:textColor="?attr/colorOnSecondary"
                    app:icon="@drawable/ic_baseline_format_list_bulleted_white_24"
                    app:iconGravity="textTop"
                    app:iconPadding="15dp"
                    app:iconSize="60dp"
                    app:iconTint="?attr/colorOnSecondary"
                    app:iconTintMode="src_in"
                    tools:ignore="TextContrastCheck" />
            </GridLayout>
        </RelativeLayout>
    </ScrollView>

    <ListView
        android:id="@+id/childrenList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:divider="?attr/colorOnPrimary"
        android:dividerHeight="10dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/menuTextChildrenList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/menuChildrenText"
        android:textColor="?attr/colorPrimary"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView" />

</androidx.constraintlayout.widget.ConstraintLayout>