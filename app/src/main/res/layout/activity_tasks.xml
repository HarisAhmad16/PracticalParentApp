<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TasksActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/customToolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/style_rounded_toolbar"
        android:backgroundTint="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:title="@string/whoseTurn"
        app:titleTextColor="?attr/colorOnSecondary" />

    <ListView
        android:id="@+id/taskListView"
        android:layout_width="414dp"
        android:layout_height="590dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customToolBar" >

    </ListView>

    <TextView
        android:id="@+id/noTasksText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_tasks_to_display_currently"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/taskListView"
        app:layout_constraintEnd_toEndOf="@+id/taskListView"
        app:layout_constraintStart_toStartOf="@+id/taskListView"
        app:layout_constraintTop_toTopOf="@+id/taskListView" />

</androidx.constraintlayout.widget.ConstraintLayout>