<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iconForTask"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_baseline_task_alt_24"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:contentDescription="@string/content_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taskNameInList"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:ellipsize="none"
        android:maxLines="5"
        android:scrollHorizontally="false"
        android:text="@string/default_text"
        android:textAlignment="viewStart"
        android:textColor="?attr/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iconForTask"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/childNameForTaskInList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:text="@string/default_text"
        android:textColor="?attr/colorSecondaryVariant"
        android:textSize="16sp"
        android:ellipsize="none"
        android:maxLines="5"
        android:scrollHorizontally="false"
        app:layout_constraintStart_toEndOf="@+id/iconForTask"
        app:layout_constraintTop_toBottomOf="@+id/taskNameInList" />

</androidx.constraintlayout.widget.ConstraintLayout>