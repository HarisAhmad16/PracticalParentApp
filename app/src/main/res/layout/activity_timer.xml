<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calm_background"
    tools:context=".ui.TimerActivity">

    <ImageView
        android:id="@+id/timerCircle"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_circle_timer" />

    <Button
        android:id="@+id/timerCancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@android:string/cancel"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerPlayPauseBtn"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/timerDummyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timerCounter"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/timerCircle"
        app:layout_constraintEnd_toEndOf="@+id/timerCircle"
        app:layout_constraintStart_toStartOf="@+id/timerCircle"
        app:layout_constraintTop_toTopOf="@+id/timerCircle"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/timerPlayPauseBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerCircle"
        app:srcCompat="@drawable/ic_baseline_play_arrow_24"
        tools:ignore="ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>