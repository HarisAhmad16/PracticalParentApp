<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    tools:context=".ui.TimerActivity">

    <ImageView
        android:id="@+id/calmBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:background="@drawable/calm_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/timerCircle"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="135dp"
        android:contentDescription="@string/timerCircleDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_circle_timer" />

    <Button
        android:id="@+id/timerCancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="?attr/colorPrimary"
        android:backgroundTintMode="src_in"
        android:text="@android:string/cancel"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerPlayPauseBtn"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/timerPlayPauseBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/playPauseDescript"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerCircle"
        app:srcCompat="@drawable/ic_baseline_play_arrow_24"
        tools:ignore="ImageContrastCheck" />

    <EditText
        android:id="@+id/timerInputHour"
        android:layout_width="72dp"
        android:layout_height="86dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="160dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="@string/timerDefaultTimeInput"
        android:inputType="number"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="?attr/colorOnPrimary"
        android:textColorHint="?attr/colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/timerCircle"
        app:layout_constraintEnd_toEndOf="@+id/timerCircle"
        app:layout_constraintStart_toStartOf="@+id/timerCircle"
        app:layout_constraintTop_toTopOf="@+id/timerCircle"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/timerInputMin"
        android:layout_width="72dp"
        android:layout_height="86dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="@string/timerDefaultTimeInput"
        android:inputType="number"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="?attr/colorOnPrimary"
        android:textColorHint="?attr/colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/timerCircle"
        app:layout_constraintEnd_toEndOf="@+id/timerCircle"
        app:layout_constraintStart_toStartOf="@+id/timerCircle"
        app:layout_constraintTop_toTopOf="@+id/timerCircle"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/timerInputSec"
        android:layout_width="72dp"
        android:layout_height="86dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="13dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="@string/timerDefaultTimeInput"
        android:inputType="number"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="?attr/colorOnPrimary"
        android:textColorHint="?attr/colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/timerCircle"
        app:layout_constraintEnd_toEndOf="@+id/timerCircle"
        app:layout_constraintStart_toStartOf="@+id/timerCircle"
        app:layout_constraintTop_toTopOf="@+id/timerCircle"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/timerColon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="80dp"
        android:text="@string/timerTimeSeparator"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/timerCircle"
        app:layout_constraintEnd_toEndOf="@+id/timerCircle"
        app:layout_constraintStart_toStartOf="@+id/timerCircle"
        app:layout_constraintTop_toTopOf="@+id/timerCircle" />

    <TextView
        android:id="@+id/timerColon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="5dp"
        android:text="@string/timerTimeSeparator"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/timerCircle"
        app:layout_constraintEnd_toEndOf="@+id/timerCircle"
        app:layout_constraintStart_toStartOf="@+id/timerCircle"
        app:layout_constraintTop_toTopOf="@+id/timerCircle" />

</androidx.constraintlayout.widget.ConstraintLayout>